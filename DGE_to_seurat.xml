<tool id="DGE_to_seurat" name="DGE to Seurat" version="0.1.0">
    <description> transforms an alevin matrix in rds format to a Seurat object</description>
    <stdio>
        <exit_code range="1:" />
    </stdio>
    <requirements>
        <requirement type="package" version="3.4.1">r-base</requirement>
        <requirement type="package" version="1.20.0">r-getopt</requirement>
	<requirement type="package" version="2.3.4">r-seurat</requirement>
    </requirements>
    <command><![CDATA[
        Rscript '$__tool_directory__/rscripts/convert_DGE_to_seurat.R --input $dge_matrix  --output $seurat_object'
    ]]></command>
    <inputs>
        <param type="data" name="dge_matrix" format="txt" label="DGE matrix (cells x genes)" />
    </inputs>
    <outputs>
        <data name="seurat_object" format="rdata" />
    </outputs>
    <tests>
        <test>
            <param name="dge_matrix" value="/test_data/dge_matrix.txt"/>
            <output name="seurat_object" file="/test_data/alevin_seurat_object.rds"/>
        </test>
    </tests>
    <help><![CDATA[
        Reads in digital expression matrix (DGE) in text format and creates a Seurat object from it.
    ]]></help>
</tool>
